    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.medicare.ui.main.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_check"
        android:name="com.example.medicare.ui.main.check.CheckFragment"
        android:label="@string/title_check"
        tools:layout="@layout/fragment_check" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.medicare.ui.main.profile.ProfileFragment"
        android:label="@string/title_profile"
